<config>
    <append xpath="/windows">

        <!-- Cooking Prep Station -->
        <window name="windowToolsPrepStation" width="228" height="121" panel="Right"
            cursor_area="true">
            <panel style="header.panel">
                <sprite style="header.icon" sprite="ui_game_symbol_cookware" />
                <label style="header.name" text="TOOLS" text_key="xuiTools" />
            </panel>

            <rect name="content" depth="0" pos="0,-46" height="75" disablefallthrough="true">

                <grid name="inventory" rows="1" cols="3" pos="3,-3" cell_width="75" cell_height="75"
                    controller="WorkstationToolGrid" repeat_content="true" allow_sort_order="false"
                    required_tools="MMKtoolMixingBowl,MMKtoolMortarPestle,MMKtoolChefKnife"
                    required_tools_only="true">
                    <item_stack controller="RequiredItemStack" name="0" />
                </grid>
            </rect>
        </window>

        <!--#$-IGS BEGIN: Adding cursor area. -$#-->
        <window name="windowMMKworkstationCompostBinInput" width="228" height="204" panel="Right"
            controller="WorkstationMaterialInputWindow" materials_accepted="wood,plants,paper,cloth,resourceBone" valid_materials_color="[green]" invalid_materials_color="[red]" cursor_area="true" >
        <!--#$-IGS END.-$#-->
            <panel style="header.panel">
                <sprite style="header.icon" sprite="ui_game_symbol_forge"/>
                <label style="header.name" text="INPUT" text_key="xuiComposting" />
            </panel>

            <sprite depth="2" name="backgroundMain" sprite="menu_empty3px" pos="0,-46" height="153" color="[black]" type="sliced" fillcenter="false" on_press="true" />
            <rect name="content" depth="1" pos="0,-46" height="153">

                <grid depth="7" rows="6" cols="1" pos="3,-3" cell_width="75" cell_height="75" controller="WorkstationMaterialInputGrid" repeat_content="true">
                    <item_stack name="0"/>
                </grid>

            </rect>

            <rect name="content2" depth="0" pos="78, -49" width="147" height="148">
                <sprite depth="1" color="[mediumGrey]" type="sliced" on_press="true"/>
                <grid rows="6" cols="1" pos="3,-3" cell_width="147" cell_height="24"  repeat_content="true">
                    <forge_material name="0"/>
                </grid>
            </rect>
        </window>

    </append>
</config>